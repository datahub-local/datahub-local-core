---
bases:
  - ../../values/base.yaml
---
helmDefaults:
  wait: true
  timeout: 600
  recreatePods: true
  force: false

commonLabels:
  provider: "{{ .Values.release_name }}-helm"

releases:
  - name: "{{ .Values.release_name }}-common"
    namespace: default
    chart: "."
    values:
      - ../../values/global.yaml
      - values/default.yaml.gotmpl
